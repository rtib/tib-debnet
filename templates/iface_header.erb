# interface <%= @ifname -%> configuration
<% if @allows.index('hotplug') != nil -%>
allow-hotplug <%= @ifname %>
<% else -%>
<%   if @auto == true -%>
auto <%= @ifname %>
<%   else -%>
<%= @ifname %>
<%   end -%>
<% end -%>
<% @allows.each do |s| -%>
<%   if s != 'hotplug' -%>
allow-<%= s -%> <%= @ifname %>
<%   end -%>
<% end -%>
